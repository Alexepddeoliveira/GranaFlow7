<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/gf_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Cabeçalho roxo -->
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/gf_purple_dark"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <TextView
            android:text="Resumo"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Valores do período selecionado"
            android:textColor="@color/gf_purple_soft"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Conteúdo -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:overScrollMode="never">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="0dp">

            <!-- Filtro mês/ano -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-3dp"
                android:layout_marginBottom="0dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/gf_bg"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:orientation="horizontal"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="16dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:id="@+id/spMonthSummary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Spinner
                        android:id="@+id/spYearSummary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Cards dos valores -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/gf_bg"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Falta pagar -->
                    <TextView
                        android:text="Falta pagar"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvFaltaPagar"
                        android:text="R$ 0,00"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#DC2626"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <!-- Gastos totais -->
                    <TextView
                        android:text="Gastos totais"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvTotalPagar"
                        android:text="R$ 0,00"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#DC2626"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <!-- Total a ser recebido -->
                    <TextView
                        android:text="Total a ser recebido"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvTotalReceber"
                        android:text="R$ 0,00"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/gf_green"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <!-- Total recebido -->
                    <TextView
                        android:text="Total recebido"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvTotalMes"
                        android:text="R$ 0,00"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/gf_purple_dark"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <!-- Total em conta -->
                    <TextView
                        android:text="Total em conta"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvTotalConta"
                        android:text="R$ 0,00"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/gf_purple_dark"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <!-- Botões -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnShare"
                        android:text="Compartilhar resumo"
                        android:textAllCaps="false"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="@color/gf_purple"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnVerGrafico"
                        android:text="Ver gráfico do período"
                        android:textAllCaps="false"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/gf_purple_dark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

    <!-- Hot Bar -->
    <fragment
        android:id="@+id/fragHotbar"
        android:name="com.alex.granaflow7.HotbarFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
