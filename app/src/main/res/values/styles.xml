<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ===== Tipografia ===== -->
    <style name="Text.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="Text.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="Text.LabelMedium" parent="TextAppearance.Material3.LabelMedium"/>

    <!-- ===== Hot Bar ===== -->
    <style name="Widget.GF.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/Text.TitleLarge</item>
        <item name="android:popupTheme">@style/ThemeOverlay.Material3.Light</item>
        <item name="android:background">@color/md_theme_surface</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- ===== Cards ===== -->
    <style name="Widget.GF.Card" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">20dp</item>
        <item name="strokeColor">@color/md_theme_outline</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <!-- ===== Botões ===== -->
    <style name="Widget.GF.Button.Primary" parent="Widget.Material3.Button">
        <item name="cornerRadius">28dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="Widget.GF.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">28dp</item>
        <item name="strokeColor">@color/md_theme_outline</item>
    </style>

    <!-- ===== TextFields ===== -->
    <style name="Widget.GF.TextField" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="hintTextColor">@color/md_theme_onSurfaceVariant</item>
    </style>

    <!-- ===== Botoes navegação ===== -->
    <style name="Widget.GF.BottomNav" parent="Widget.Material3.BottomNavigationView">
        <item name="itemHorizontalTranslationEnabled">false</item>
        <item name="android:background">@color/md_theme_surface</item>
        <item name="itemIconTint">@color/md_theme_onSurfaceVariant</item>
        <item name="itemTextColor">@color/md_theme_onSurfaceVariant</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="elevation">8dp</item>
    </style>

</resources>
